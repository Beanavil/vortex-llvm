
## Building LLVM for RiscV                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                               
- git clone -b release/10.x https://github.com/llvm/llvm-project.git llvm
- cd llvm
- mkdir build
- cd build
- export LLVM_VORTEX=/opt/llvm-vortex
- export RISCV_TOOLCHAIN_PATH=/opt/riscv-gnu-toolchain
- cmake -G Ninja -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=$LLVM_VORTEX -DLLVM_ENABLE_PROJECTS="clang" -DLLVM_TARGETS_TO_BUILD="RISCV" -DLLVM_DISABLE_ABI_BREAKING_CHECKS_ENFORCING=OFF -DLLVM_INCLUDE_BENCHMARKS=OFF -DLLVM_INCLUDE_EXAMPLES=OFF -DLLVM_INCLUDE_TESTS=OFF -DDEFAULT_SYSROOT=$RISCV_TOOLCHAIN_PATH/riscv32-unknown-elf -DLLVM_DEFAULT_TARGET_TRIPLE="riscv32-unknown-elf" ../llvm
#- cmake -G Ninja -DCMAKE_BUILD_TYPE=RelWithDebInfo -DLLVM_ENABLE_ASSERTIONS=ON -DCMAKE_INSTALL_PREFIX=$LLVM_VORTEX -DLLVM_ENABLE_PROJECTS="clang" -DLLVM_TARGETS_TO_BUILD="RISCV" -DLLVM_DISABLE_ABI_BREAKING_CHECKS_ENFORCING=OFF -DLLVM_INCLUDE_BENCHMARKS=OFF -DLLVM_INCLUDE_EXAMPLES=OFF -DLLVM_INCLUDE_TESTS=OFF -DDEFAULT_SYSROOT=$RISCV_TOOLCHAIN_PATH/riscv32-unknown-elf -DLLVM_DEFAULT_TARGET_TRIPLE="riscv32-unknown-elf" ../llvm
- cmake --build . --parallel 4
- cmake --build . --target install

 /opt/riscv-gnu-toolchain/bin/riscv32-unknown-elf-gcc -march=rv32imf -o kernel.elf -w -O3 -Wstack-usage=1024 -nostdlib -T/home/blaise/dev/vortex_live/runtime/linker/vx_link.ld -static /home/blaise/dev/vortex_live/runtime/src/vx_start.S /home/blaise/dev/vortex_live/runtime/src/vx_syscalls.c /home/blaise/dev/vortex_live/runtime/src/vx_spawn.c  kernel.c -I/home/blaise/dev/vortex_live/runtime/include -I/home/blaise/dev/vortex_live/runtime/../hw -I/opt/riscv-gnu-toolchain/riscv32-unknown-elf/include -L/opt/riscv-gnu-toolchain/riscv32-unknown-elf/lib -lc -lm -lgcc
